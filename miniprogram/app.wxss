/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局主题色 - 玫红色 */
/* Skyline不支持CSS变量，改用全局类 */
/* :root {
  --primary-color: #FF69B4; 
  --primary-color-light: #FFB6C1;
} */

/* 定义主题色的全局样式类 */
.primary-color {
  color: #FF69B4;
}

.primary-bg {
  background-color: #FF69B4;
}

.primary-color-light {
  color: #FFB6C1;
}

.primary-bg-light {
  background-color: #FFB6C1;
}

.primary-border {
  border-color: #FF69B4;
}

/* 可以在这里添加更多全局样式 */
page {
  background-color: #f8f8f8; /* 设置页面默认背景色 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
} 